@using ConfluencePOC.Web.Models.Contentful
@{
    switch (ViewBag.Phase)
    {
        case ConfigurationEntity.BannerPhase.Alpha:
        case ConfigurationEntity.BannerPhase.Beta:
            <div class="govuk-width-container">
                <govuk-phase-banner>
                    <govuk-phase-banner-tag>Beta</govuk-phase-banner-tag>
                    <span class="govuk-phase-banner__text">
                        This is a new service. Help us improve it and <a class="govuk-link" href="#">give your feedback by email</a>.
                    </span>
                </govuk-phase-banner>
            </div>
            break;
    }
}


